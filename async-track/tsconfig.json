        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./out",
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "out/**/*"
    ]
}